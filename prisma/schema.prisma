generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(uuid())
  email         String       @unique
  name          String?
  role          String       @default("user")
  lofts         Loft[]       @relation("LoftOwner")
  sharedLofts   SharedLoft[]
  payments      Payment[]
  raceEntries   RaceEntry[]
  createdAt     DateTime     @default(now())
  emailVerified Boolean
  image         String?
  updatedAt     DateTime
  banned        Boolean?
  banReason     String?
  banExpires    DateTime?
  sessions      Session[]
  accounts      Account[]

  @@map("user")
}

model Loft {
  id         String       @id @default(uuid())
  loftId     String       @unique // Unique public-facing ID
  name       String
  location   String
  user       User         @relation("LoftOwner", fields: [userId], references: [id])
  userId     String
  birds      Bird[]
  sharedWith SharedLoft[] // Users this loft is shared with
  createdAt  DateTime     @default(now())
}

model SharedLoft {
  id     String @id @default(uuid())
  loft   Loft   @relation(fields: [loftId], references: [id])
  loftId String
  user   User   @relation(fields: [userId], references: [id])
  userId String

  // prevent duplicate sharing
  @@unique([loftId, userId])
}

model Bird {
  id                String      @id @default(uuid())
  name              String
  bandNumber        String      @unique
  breed             String?
  color             String?
  gender            String?
  age               Int?
  wingspan          Float?
  vaccinationStatus String?
  penNumber         String?
  raceExperience    Int? // number of races
  status            BirdStatus  @default(ACTIVE)
  rfIdTag           String?     @unique
  loft              Loft        @relation(fields: [loftId], references: [id])
  loftId            String
  raceEntries       RaceEntry[]
  createdAt         DateTime    @default(now())
}

enum BirdStatus {
  ACTIVE
  MISSING
  HOSPITALIZED
}

model Race {
  id              String      @id @default(uuid())
  name            String
  date            DateTime
  distanceKm      Float
  startLocation   String
  endLocation     String
  entryFee        Float
  maxParticipants Int
  status          RaceStatus  @default(UPCOMING)
  rules           String?
  description     String?
  entries         RaceEntry[]
  photoUrl        String?
  createdAt       DateTime    @default(now())
}

enum RaceStatus {
  UPCOMING
  LIVE
  COMPLETED
}

model RaceEntry {
  id          String         @id @default(uuid())
  race        Race           @relation(fields: [raceId], references: [id])
  raceId      String
  bird        Bird           @relation(fields: [birdId], references: [id])
  birdId      String
  user        User           @relation(fields: [userId], references: [id])
  userId      String
  payment     Payment?       @relation(fields: [paymentId], references: [id])
  paymentId   String?
  status      EntryStatus    @default(PENDING)
  birdStatus  BirdRaceStatus @default(UNKNOWN)
  arrivalTime DateTime?
  position    Int?
  speed       Float?
  createdAt   DateTime       @default(now())

  @@unique([raceId, birdId])
}

enum BirdRaceStatus {
  UNKNOWN
  ARRIVED
  DISQUALIFIED
  RETIRED
  MISSING
}

enum EntryStatus {
  PENDING
  PAID
  CANCELLED
}

model Payment {
  id                  String        @id @default(uuid())
  paypalTransactionId String        @unique
  payerEmail          String
  amount              Float
  currency            String        @default("USD")
  status              PaymentStatus
  paymentTime         DateTime
  user                User          @relation(fields: [userId], references: [id])
  userId              String
  raceEntries         RaceEntry[]
  createdAt           DateTime      @default(now())
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime
  updatedAt      DateTime
  ipAddress      String?
  userAgent      String?
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  impersonatedBy String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}
